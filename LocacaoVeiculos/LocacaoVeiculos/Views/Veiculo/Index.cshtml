@model IEnumerable<LocacaoVeiculos.Models.Veiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Veiculos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorFipe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorLocacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnoFabricacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UltimaRevisao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) 
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                R$@Html.DisplayFor(modelItem => item.ValorFipe)
            </td>
            <td>
                R$@Html.DisplayFor(modelItem => item.ValorLocacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UltimaRevisao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Locar", "Locar", new { id = item.Id, valorLocacao = item.ValorLocacao })
            </td>
        </tr>
    
    }

</table>
