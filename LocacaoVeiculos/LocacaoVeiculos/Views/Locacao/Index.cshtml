@model IEnumerable<LocacaoVeiculos.Models.Locacao>

@{
    ViewBag.Title = "Index";
}

<h2>Veiculos Locados</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdVeiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </th>
    </tr>

@if (Model.Any())
{
    foreach (var item in Model) {    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdVeiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
        </tr>
    }
}
</table>
